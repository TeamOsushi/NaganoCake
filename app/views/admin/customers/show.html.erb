<h2 class="head-line title_h2 text-center">
    <%= full_name(@customer) %>さんの会員詳細
  </h2>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="field">
        <p>
          顧客ID　　　　　<%= @customer.id %>
          <% if @customer.is_customer_status == true %>
            <span>　<i class="fas fa-bullseye blue"></i>退会済
          <% elsif @customer.is_customer_status == false %>
            　<i class="fas fa-bullseye red"></i>有効会員</span>
          <% end %>
        </p>
      </div>
      <div class="field">
        <p>
          氏名　　　　　　<%= full_name(@customer) %>
        </p>
      </div>
      <div class="field">
        <p>
          フリガナ　　　　<%= kana_full_name(@customer) %>
        </p>
      </div>
      <div class="field">
        <p>
          郵便番号　　　　<%= @customer.post_code %>
        </p>
      </div>
      <div class="field">
        <p>
          住所　　　　　　<%= @customer.address %>
        </p>
      </div>
      <div class="field">
        <p>
          電話番号　　　　<%= @customer.telephone_number %>
        </p>
      </div>
      <div class="field">
        <p>
          メールアドレス　<%= @customer.email%>
        </p>
      </div>

      <div class="actions">
        <%= link_to "編集する",edit_admin_customer_path(@customer), class: "glyphicon glyphicon-pencil btn btn-success edit_shipping_addres_#{@customer.id}" %>
        <%= link_to " 注文履歴一覧を見る", admin_order_current_index_path(@customer), class: "glyphicon glyphicon-folder-open btn btn-info" %>
      </div>
      
    </div>
  </div>