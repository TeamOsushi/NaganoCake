

<div class="container">
 <div class="row">
   <h1 class="mx-auto pt-5 pb-5">商品一覧</h1>
 </div>
 
 <div class="row">
   <% @items.each do |item| %>
    <%= link_to(item_path(item.id)) do %><%= attachment_image_tag item, :image, :fill, 300, 300, format: 'jpeg' %><% end %>
    <%= item.item_name %>
    <% if item.is_sales_status == true %>
    <%= item.price_without_tax %>
    <% elsif item.is_sales_status == false %>
      <p>売り切れ中</p>
    <% end %>
   <% end %>
 </div>