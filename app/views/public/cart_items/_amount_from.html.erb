<td class="text-left">
  <%= attachment_image_tag( cart_item.item, :image, size: "50x50", fallback: "no_image.jpg") %>
  <%= cart_item.item.item_name %>
</td>
<td class="text-right">
  ¥<%= cart_item.item.with_tax_price%>
</td>
<td>
  <%= form_with model: cart_item, url: customers_cart_item_path(id: cart_item.id), method: :patch , remote: true do |f| %>
    <%= f.number_field :amount, class: "amount", size: 10, min: 1, id: "amount_cart" %>
    <%= f.submit "変更", class: "btn btn-info" %>
    
  <% end %>
</td>
<td class="text-right" id='sub_price-<%= cart_item.id %>'>
  ¥<%= cart_item.subtotal%>
</td>
<td>
  <%= link_to " 削除する", customers_cart_item_path(cart_item), method: :delete, remote: true, data: {confirm: "#{cart_item.item.item_name}を削除してよろしいですか？"}, class: "glyphicon glyphicon-trash btn btn-danger" %>
</td>