

<div class="container">
 <div class="row">
   <h1 class="mx-auto pt-5 pb-5">商品一覧</h1>
 </div>
 
 <div class="container container-m">
  <div class="card-deck">
   <% @items.each do |item| %>
   <div class="card">
   <div class="card-body">
     <%= link_to(item_path(item.id)) do %><%= attachment_image_tag item, :image, size: '300x250', format: 'jpeg' %><% end %>
     <h5 class="card-title text-center"><%= item.item_name %></h5>
     <p class="card-text text-center"><%= item.price_without_tax %>円</p>
   </div>
   </div>
   <% end %>
  </div>
 </div>

<footer>
  <ul class="footer">
 <li>
<%= link_to "管理者ログイン", new_admin_session_path %>
</li>
</footer>