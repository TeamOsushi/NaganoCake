        <%= link_to 'アバウト', public_home_about_path, class: "fas fa-store text-dark pr-4 d-flex align-items-center" %>
        <%= link_to '新規登録', new_customer_registration_path, class: "fas fa-user-plus text-dark pr-4 d-flex align-items-center" %>
        <%= link_to 'ログイン', new_customer_session_path, class: "fas fa-sign-in-alt text-dark pr-4 d-flex align-items-center" %>
